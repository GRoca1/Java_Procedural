package projets;

import java.util.Scanner;

public class Année_bissextile
{

public static void main(String[] args)
{
	Scanner sc=new Scanner(System.in);
	
	System.out.print("Veuillez entrer une année:");
	
    int a = sc.nextInt();
    boolean b = false;
    
    
    if(a % 4 == 0)
    {
        b = true;
    }
    else if (a % 100 == 0)
    {
        b = false;
    }
    else if(a % 400 == 0)
    {
        b = true;
    }
    else
    {
        b = false;
    }
    if(b == true)
    {
        System.out.println("L'année "+ a +" est une année bissextile");
    }
    else
    {
        System.out.println("L'année "+ a +" n'est pas une année bissextile");
    
    }
    sc.nextLine();
    System.out.println("voulez vous rentrer une autre année?");
     rep=sc.nextLine();
    
     if(!rep.equalsIgnoreCase("oui")) {
    	 continuer=false;
     }
}
}
    
    

